<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_view"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_senin"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/lightColorSecondary"
                android:gravity="center"
                android:text="Senin"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/lightColorOnSecondary"
                app:cornerRadius="15dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_selasa"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/lightColorSecondary"
                android:gravity="center"
                android:text="Selasa"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/lightColorOnSecondary"
                app:cornerRadius="15dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_rabu"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/lightColorSecondary"
                android:gravity="center"
                android:text="Rabu"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/lightColorOnSecondary"
                app:cornerRadius="15dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_kamis"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/lightColorSecondary"
                android:gravity="center"
                android:text="Kamis"
                android:textSize="20dp"
                android:textColor="@color/lightColorOnSecondary"
                android:textStyle="bold"
                android:fontFamily="@font/montserratbold"
                app:cornerRadius="15dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_jumat"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/lightColorSecondary"
                android:gravity="center"
                android:text="Jumat"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/lightColorOnSecondary"
                app:cornerRadius="15dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sabtu"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/lightColorSecondary"
                android:gravity="center"
                android:text="Sabtu"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/lightColorOnSecondary"
                app:cornerRadius="15dp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_minggu"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/lightColorSecondary"
            android:gravity="center"
            android:text="Minggu"
            android:textSize="20dp"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/lightColorOnSecondary"
            app:cornerRadius="15dp" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>